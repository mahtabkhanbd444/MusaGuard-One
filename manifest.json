{
  "manifest_version": 3,
  "name": "Ads Guard Personal",
  "version": "1.1",
  "description": "Block Ads, Adult & Haram websites (GitHub powered)",
  "permissions": [
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://raw.githubusercontent.com/StevenBlack/hosts/master/hosts*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
